
@model  IEnumerable<MyVitarak.Models.VendorList>
@{

    Layout = "~/Views/Shared/_layout.cshtml";
}
<div>
    @using (Html.BeginForm("VendorList", "Home", FormMethod.Post))
    {
        <div class="ibox">
            <div class="ibox-title fixed-header">
                <h5> Vendors  </h5>
            </div>
            <div class="ibox-content" style="padding-top:55px;">
                @foreach (var item in Model)
                {
                    <div class="ibox" style="margin-bottom: 4px!important;">
                        <div class="feed-activity-list">

                            <div class="feed-element VendorID" id="Vendor-@item.VendorID" VendorName="@item.VendorName">

                                <span class="pull-left">
                                    <img alt="image" style="height: 40px; width: 40px" src="~/Content/images/Person.png">
                                </span>
                                <div class="media-body ">
                                    <small class="pull-right"> </small>
                                    <strong>@item.VendorName</strong> <br>
                                    <small class="text-muted"> @item.Address</small>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.js"></script>
<script type="text/javascript">
    $('.VendorID').click(function () { 
        var VendorID = this.id.replace("Vendor-", "");
        var VendorName = this.getAttribute("VendorName");
        document.location.href = "../home/PurchaseOrderList?VendorID=" + VendorID + "&VendorName=" + VendorName;
    })
</script>
